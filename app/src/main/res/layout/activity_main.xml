<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.lavita_rica.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/body">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topbar">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DASHBOARD"
            android:layout_gravity="center_horizontal"
            android:paddingTop="12dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
    </android.support.design.widget.AppBarLayout>
</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/middle"
            android:layout_below="@+id/topbar"
            android:background="@color/colorAccent">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:rowCount="4"
                android:columnCount="2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                >

                <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp"
                    card_view:cardBackgroundColor="@color/colorAccentDark">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:id="@+id/profile"
        android:src="@drawable/ic_profile"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/profile"
        android:gravity="center_horizontal"
        />
</RelativeLayout>



            </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp"
                    card_view:cardBackgroundColor="@color/colorAccentDark">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/compensation_plan"
                            android:src="@drawable/ic_currency"
                            android:tint="@color/colorWhite"
                            android:paddingLeft="18dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="COMPENSATION"
                            android:textColor="@color/colorWhite"
                            android:layout_below="@+id/compensation_plan"
                            android:gravity="center_horizontal"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp"
                    card_view:cardBackgroundColor="@color/colorAccentDark">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/about_us"
                            android:src="@drawable/ic_about_us"
                            android:tint="@color/colorWhite"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ABOUT US"
                            android:textColor="@color/colorWhite"
                            android:layout_below="@+id/about_us"
                            android:gravity="center_horizontal"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view4"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp"
                    card_view:cardBackgroundColor="@color/colorAccentDark"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill">
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view5"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp"
                    card_view:cardBackgroundColor="@color/colorAccentDark">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/e-commerce"
                            android:src="@drawable/ic_ecommerce"
                            android:tint="@color/colorWhite"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E-COMMERCE"
                            android:textColor="@color/colorWhite"
                            android:layout_below="@+id/e-commerce"
                            android:gravity="center_horizontal"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view6"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp"
                    card_view:cardBackgroundColor="@color/colorAccentDark">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/buy_airtime"
                            android:src="@drawable/ic_buy_airtime"
                            android:tint="@color/colorWhite"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BUY AIRTIME"
                            android:textColor="@color/colorWhite"
                            android:layout_below="@+id/buy_airtime"
                            android:gravity="center_horizontal"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view7"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="10dp"
                    card_view:cardBackgroundColor="@color/colorAccentDark"
                    android:layout_gravity="right">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_height="80dp"
                            android:layout_width="match_parent"
                            android:id="@+id/products"
                            android:src="@drawable/ic_products"
                            android:tint="@color/colorWhite"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PRODUCTS"
                            android:textColor="@color/colorWhite"
                            android:layout_below="@+id/products"
                            android:gravity="center_horizontal"
                            />
                    </RelativeLayout>
                    </android.support.v7.widget.CardView>

            </GridLayout>

        </RelativeLayout>












    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
